<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../partials/head %>
</head>

<body>
    <!-- Page Content -->
    <div class="container-fluid main-container">
        <div class="padding"></div>
        <div class="row message-subject-header">
          <span><strong>  <%=thread_subject%></strong></span>
        </div>
        <div class="row">
            <div class="col-xs-12">
              <div class="list-group">
              <% for(var i=0; i<messages.length; i++) { %>
                <div class="list-group-item">
                  <div>
                    <span><strong><small><%= messages[i].author %></small></strong></span>
                    <span class="pull-right"><small><%= messages[i].date %></small></span>
                  </div>
                  <div>
                    <span class="message-body-label"><%= messages[i].body %></span>
                  </div>
                </div>
              <% } %>
              </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row message-input-panel">
          <form role="form" method="post" action="/messages/reply">
            <div class="form-group">
              <label>Reply</label>
              <textarea class="form-control" name="message"></textarea>
            </div>

            <div class="form-group">
              <input type="hidden" name="thread_id" value="<%=thread_id%>">
            </div>

            <button class="btn btn-primary" type="submit">Submit</button>
            <button class="btn btn-default" type="cancel">Cancel</button>
          </form>
        </div>
        <!-- /.row -->
    </div>

    <% include ../../partials/footer %>

  </body>
</html>
