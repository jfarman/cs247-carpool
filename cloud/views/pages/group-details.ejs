<!DOCTYPE html>
<html lang="en">

<head>

    <% include ../partials/head %>

</head>

<body>
            <div class="container-fluid main-container">
                <div class="padding"></div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-primary">
                            <!-- Default panel contents -->
                             <div class="panel-heading">Group Details</div>
                             <ul class="list-group">
                                <li class="list-group-item">
                                    <%=group.get("name")%>
                                </li>
                            </ul>
                        </div>
                     </div>
                 </div>
                 <!-- /.row -->
                 <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-primary">
                            <!-- Default panel contents -->
                             <div class="panel-heading">Group Members (parents)</div>
                             <ul class="list-group">
                                <% for (var d in drivers) {%>
                                    <li class="list-group-item"><%=drivers[d]%></li>
                                <% }%>
                            </ul>
                        </div>
                     </div>
                        <!-- /.col-lg-12 -->
                 </div>
                <!-- /.row -->
                 <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-primary">
                            <!-- Default panel contents -->
                             <div class="panel-heading">Group Members (kids) </div>
                             <ul class="list-group">
                                <% for (var p in passengers) {%>
                                    <li class="list-group-item"><%=passengers[p]%></li>
                                <% }%>
                            </ul>
                        </div>
                     </div>
                        <!-- /.col-lg-12 -->
                 </div>
                <div class="row">
                  <a href="/message/group/<%= group.id %>" class="btn btn-primary">Message</a>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
            <!--% include ../partials/nav %-->

<div class = "navbar navbar-default navbar-fixed-bottom">
	<div class  ="container">
		<% include ../partials/footer %>
	</div>
</div>

</body>

</html>
