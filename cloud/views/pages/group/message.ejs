<!DOCTYPE html>
<html lang="en">

<head>

    <% include ../../partials/head %>

</head>

<body>
    <% include ../../partials/brand_header %>
    <div class="container-fluid main-container">
        <div class="row title-header">
          <span>Send message to <%=group_name%></span>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="group-members">
              <span><strong>Members </strong></span></br>
              <% for(var i=0; i<members.length; i++) { %>
                <% if(i == 0) { %>
                <span><%= members[i].get("userId").get("first_name")%></span>
                <% } else { %>
                <span>, <%= members[i].get("userId").get("first_name")%></span>
                <% } %>
              <% } %>
            </div>
              <form role="form" method="post" action="/messages/new">

            <div class="form-group">
              <input type="hidden" value="<%=group_id%>" name="group_id">
            </div>

            <div class="form-group">
              <label>Subject</label>
              <input type="text" class="form-control" name="subject"></input>
            </div>

            <div class="form-group">
              <label>Message</label>
              <textarea class="form-control" name="message"></textarea>
            </div>

            <div class="btn-wrapper">
              <button class="btn btn-teal" type="submit">Submit</button>
              <a href="/group-details/<%=group_id%>" class="btn btn-default" >Cancel</a>
            </div>
          </form>
          </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="padding"></div>
        <div class="padding"></div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->

<div class = "navbar navbar-default navbar-fixed-bottom">
	<div class  ="container">
		<% include ../../partials/footer/updates %>

	</div>
</div>

</body>

</html>
