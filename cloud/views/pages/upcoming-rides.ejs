<!DOCTYPE html>
<html lang="en">

<head>
    <link href='http://fonts.googleapis.com/css?family=Nunito' rel='stylesheet' type='text/css'>
    <% include ../partials/head %>

</head>

<body>
    <% include ../partials/brand_header %>
    <div class="container-fluid main-container">
        <div class="title-header row">
          <span>Upcoming rides for <%=group.get("name")%></span>
        </div>
        <div class="row">
          <div class="list-group">
            <% for(var i=0; i<rides.length; i++) { %>
                <a href="/ride-details/<%= rides[i].ride.id%>" 
                class="list-group-item">
                    <%var date = rides[i].ride.get("datetime")%>
                    <%var new_date = 
                        moment(date).utcOffset("-08:00").format('ddd h:mm a MM/DD/YYYY')%>
                    <%=new_date%>
                    <span class="pull-right driver-text">
                        <%= rides[i].driver.get("first_name")%>
                    </span>
                </a>
            <% } %>
          </div>
        </div>
    </div>
    <!-- /.container-fluid -->

<div class = "navbar navbar-default navbar-fixed-bottom">
	<div class  ="container">
		<% include ../partials/footer/groups %>

	</div>

</body>

</html>
