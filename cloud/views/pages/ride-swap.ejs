<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
    <!-- Page Content -->
    <div class="container-fluid main-container">
        <div class="padding"></div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <!-- Default panel contents -->
                     <div class="panel-heading">Ride Details</div>
                     <ul class="list-group">
                        <li class="list-group-item">
                            <%= group %>
                             <span class="pull-right">
                                <%= date %>
                            </span>
                        </li>
                    </ul>
                </div>
             </div>
         </div>
        <div class="row">
          <div class="col-lg-12">
            <div class="panel panel-primary">
              <div class="panel-heading">Current Driver</div>
                <ul class="list-group">
                  <a href="#" class="list-group-item">
                    <%= driver_name %>
                  </a>
                </ul>
            </div>
          </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <!-- Default panel contents -->
                     <div class="panel-heading">Ride Passengers</div>
                     <ul class="list-group">
                        <% for (var p in passengers) {%>
                            <li class="list-group-item"><%=passengers[p]%></li>
                        <% }%>
                    </ul>
                </div>
             </div>
         </div>
         
        <div class="row">
            <div class="col-lg-12">

            <form role="form" method="post" action="/ride/swap">
                <div class="form-group">
                    <label> Note: </label>
                    <textarea class="form-control" name="note"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Confirm</button>
                <button type="cancel" class="btn btn-default">Cancel</button>

            </form>

            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>

    <% include ../partials/footer %>

</body>

</html>
